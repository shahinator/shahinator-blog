<h1 align="center">All <strong>Shahinator's</strong> Blogger</h1>
<hr>
<div class="text-center">
<%= will_paginate @users %>
</div>
<% @users.each do |user| %>
    <ul class="listing">
        <div class="row">
            <div class="well col-md-4 col-md-offset-4">
                <li>
                    <%= link_to gravatar_for(user), user_path(user) %>
                </li>
                <li class="article-title">
                    <%= link_to user.username, user_path(user) %>
                </li>
                <li>
                    <small><%= pluralize(user.articles.count, "article") if user.articles %></small>
                </li>
                <% if logged_in? and current_user.admin? %>
                    <li><%= link_to "Delete This User", user_path(user), method: :delete, data:{ confirm: "Are you Sure you want to delete this User and therir all articles?" } %></li>
                <% end %>
            </div>
        </div>
    </ul>
<% end %>
<div class="text-center">
<%= will_paginate @users %>
</div>